{
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "publisher": "Rodrigo",
    "copyright": "© 2025 Spectrevz — Made by Rodrigo Dias",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "category": "Productivity",
    "shortDescription": "Modern desktop app to manage, share, and version files in the cloud with ease.",
    "longDescription": "Nuvium is a modern desktop application built with Tauriv2, React, and Rust, designed for businesses and teams to efficiently manage, share, and version files in the cloud. It offers an intuitive drag & drop interface, commit history with messages, file categorization, intelligent search, and plans for multi-cloud integration, providing fast and secure local management powered by cloud technology.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "createUpdaterArtifacts": true
  },
  "build": {
    "beforeDevCommand": "pnpm start",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build",
    "devUrl": "http://localhost:1420"
  },
  "productName": "Nuvium",
  "mainBinaryName": "Nuvium",
  "version": "../package.json",
  "identifier": "io.nuvium.app",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://youtu.be/ZXjlZBisYPQ"
      ],
      "pubkey": ""
    }
  },
  "app": {
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'; connect-src ipc: http://ipc.localhost"
    },
    "windows": [
      {
        "title": "Nuvium",
        "label": "main",
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": false,
        "useHttpsScheme": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/SystemTray1.ico",
      "iconAsTemplate": true
    },
    "withGlobalTauri": false
  }
}
